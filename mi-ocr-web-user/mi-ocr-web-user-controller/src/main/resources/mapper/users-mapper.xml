<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.millions.idea.ocr.web.user.repository.mapper.IUserMapperRepository">
    <sql id="fields">
       user_name,password,issue_id,issue_result,qq,regist_time,last_active_time,last_login_ip,level_id
    </sql>
    <sql id="f_fields">
        uid,<include refid="fields"/>
    </sql>

    <select id="queryList" parameterType="java.util.List" resultType="org.millions.idea.ocr.web.user.entity.db.Users">
        SELECT <include refid="f_fields"/> FROM users
    </select>

    <select id="query" parameterType="java.lang.Integer" resultType="org.millions.idea.ocr.web.user.entity.db.Users">
        SELECT <include refid="f_fields"/> FROM users WHERE uid = #{uid}
    </select>
</mapper>